<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Type And Run"
            android:textColor="@color/colorPrimary"
            android:textAlignment="center"
            android:layout_margin="6dp"
            android:textSize="34dp"
            android:fontFamily="Rockwell"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="18dp">
            <TextView
                style="@style/myStyle"
                android:text="MAKE:"/>
            <EditText
                android:id="@+id/ET_Make"
                style="@style/myStyle"
                />

            <TextView
                style="@style/myStyle"
                android:text="Year:"/>
            <EditText
                android:id="@+id/ET_Year"
                android:inputType="number"
                style="@style/myStyle"
                />

            <TextView
                style="@style/myStyle"
                android:text="Color:"/>
            <EditText
                android:id="@+id/ETColor"
                style="@style/myStyle"
                />

            <TextView
                style="@style/myStyle"
                android:text="Purchase price:"/>
            <EditText
                android:id="@+id/Et_Price"
                android:inputType="number"
                style="@style/myStyle"
                />

            <TextView
                style="@style/myStyle"
                android:text="Engine Size (litre):"/>
            <EditText
                android:id="@+id/Et_Size"
                android:inputType="number"
                style="@style/myStyle"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="20dp">

            <Button
                android:id="@+id/btnCreateCar"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Create Car"/>
            <Button
                android:id="@+id/btnDiesel"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Create Diesel"
                android:textColor="#FFF"
                android:background="@color/colorPrimary"/>
        </LinearLayout>

        <android.support.v4.widget.NestedScrollView
            android:id="@+id/scrollView"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="100dp">
            <TextView
                android:id="@+id/txtVOutput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="30dp"/>
        </android.support.v4.widget.NestedScrollView>
    </LinearLayout>
</ScrollView>